import { useEffect, useState } from "react";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Link } from "react-router-dom";
import {
  ArrowLeft,
  Star,
  TrendingUp,
  Users,
  MessageSquare,
  AlertTriangle,
  Activity,
  PieChart as PieChartIcon,
  BarChart3,
  Clock,
  Globe,
  Gauge,
} from "lucide-react";
import {
  AreaChart,
  Area,
  XAxis,
  YAxis,
  CartesianGrid,
  Tooltip,
  ResponsiveContainer,
  BarChart,
  Bar,
  PieChart,
  Pie,
  Cell,
  Legend,
  RadialBarChart,
  RadialBar,
  PolarAngleAxis,
} from "recharts";

interface Feedback {
  name: string;
  email: string;
  rating: number;
  comment: string;
  timestamp: string;
  page: string;
}

const COLORS = ["#ef4444", "#f97316", "#eab308", "#22c55e", "#3b82f6"];
const SENTIMENT_COLORS = ["#ef4444", "#eab308", "#22c55e"]; // Negative, Neutral, Positive

const Dashboard = () => {
  const [feedbackData, setFeedbackData] = useState<Feedback[]>([]);

  useEffect(() => {
    const data = JSON.parse(localStorage.getItem("feedbackData") || "[]");
    setFeedbackData(data);
  }, []);

  const avgRating = feedbackData.length > 0
    ? (feedbackData.reduce((sum, f) => sum + f.rating, 0) / feedbackData.length).toFixed(1)
    : "0.0";

  // --- Data Preparation for Charts ---

  // 1. Rating Distribution
  const ratingCounts = [0, 0, 0, 0, 0];
  feedbackData.forEach((f) => {
    if (f.rating >= 1 && f.rating <= 5) {
      ratingCounts[f.rating - 1]++;
    }
  });
  const ratingData = ratingCounts.map((count, index) => ({
    name: `${index + 1} Stars`,
    count,
    fill: COLORS[index],
  }));

  // 2. Sentiment Analysis
  const sentimentCounts = { negative: 0, neutral: 0, positive: 0 };
  feedbackData.forEach((f) => {
    if (f.rating <= 2) sentimentCounts.negative++;
    else if (f.rating === 3) sentimentCounts.neutral++;
    else sentimentCounts.positive++;
  });
  const sentimentData = [
    { name: "Negative", value: sentimentCounts.negative },
    { name: "Neutral", value: sentimentCounts.neutral },
    { name: "Positive", value: sentimentCounts.positive },
  ];

  // 3. Daily Trends
  const trendMap = new Map<string, { date: string; count: number; avg: number; total: number }>();
  feedbackData.forEach((f) => {
    const date = new Date(f.timestamp).toLocaleDateString("en-US", { month: "short", day: "numeric" });
    if (!trendMap.has(date)) {
      trendMap.set(date, { date, count: 0, avg: 0, total: 0 });
    }
    const entry = trendMap.get(date)!;
    entry.count++;
    entry.total += f.rating;
    entry.avg = parseFloat((entry.total / entry.count).toFixed(1));
  });
  const trendData = Array.from(trendMap.values()).slice(-7);

  // 4. NPS Score (Net Promoter Score)
  // Promoters (9-10 equivalent to 5 stars), Passives (7-8 equivalent to 4 stars), Detractors (0-6 equivalent to 1-3 stars)
  // Simplified mapping: 5 stars = Promoter, 4 stars = Passive, 1-3 stars = Detractor
  let promoters = 0;
  let detractors = 0;
  feedbackData.forEach(f => {
    if (f.rating === 5) promoters++;
    else if (f.rating <= 3) detractors++;
  });
  const npsScore = feedbackData.length > 0 ? Math.round(((promoters - detractors) / feedbackData.length) * 100) : 0;
  const npsData = [{ name: "NPS", value: npsScore + 100, fill: "#8b5cf6" }]; // Offset for visualization

  // 5. Feedback by Page
  const pageMap = new Map<string, number>();
  feedbackData.forEach(f => {
    const pageName = f.page.split('/').pop() || 'Home';
    pageMap.set(pageName, (pageMap.get(pageName) || 0) + 1);
  });
  const pageData = Array.from(pageMap.entries()).map(([name, count]) => ({ name, count })).sort((a, b) => b.count - a.count).slice(0, 5);

  // 6. Peak Feedback Hours
  const hourMap = new Array(24).fill(0);
  feedbackData.forEach(f => {
    const hour = new Date(f.timestamp).getHours();
    hourMap[hour]++;
  });
  const hourData = hourMap.map((count, hour) => ({
    hour: `${hour}:00`,
    count,
  }));

  const lowRatings = feedbackData.filter((f) => f.rating <= 2);

  const CustomTooltip = ({ active, payload, label }: any) => {
    if (active && payload && payload.length) {
      return (
        <div className="bg-gray-900/95 backdrop-blur-sm border border-gray-800 p-3 rounded-lg shadow-xl text-gray-100">
          <p className="font-semibold mb-1">{label}</p>
          {payload.map((entry: any, index: number) => (
            <p key={index} className="text-sm" style={{ color: entry.color || entry.fill }}>
              {entry.name}: {entry.value}
            </p>
          ))}
        </div>
      );
    }
    return null;
  };

  return (
    <div className="min-h-screen bg-black text-gray-100 font-sans selection:bg-blue-500/30">
      {/* Header */}
      <header className="border-b border-gray-800 bg-black/50 backdrop-blur-md sticky top-0 z-40">
        <div className="container mx-auto px-4 py-4 flex justify-between items-center">
          <div className="flex items-center gap-4">
            <Link to="/">
              <Button variant="ghost" size="icon" className="text-gray-400 hover:text-white hover:bg-gray-800">
                <ArrowLeft className="w-5 h-5" />
              </Button>
            </Link>
            <div>
              <h1 className="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-violet-400 to-purple-400">
                Analytics Command Center
              </h1>
              <p className="text-xs text-gray-500">Real-time Intelligence</p>
            </div>
          </div>
          <div className="flex items-center gap-2 text-sm text-gray-400 bg-gray-900 border border-gray-800 px-3 py-1 rounded-full">
            <Activity className="w-4 h-4 text-green-500 animate-pulse" />
            Live System
          </div>
        </div>
      </header>

      <main className="container mx-auto px-4 py-8 space-y-8">
        {/* Key Metrics Row */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-6">
          {[
            { title: "Average Rating", value: avgRating, icon: Star, color: "text-blue-400", bg: "bg-blue-500/10", sub: "Overall Score" },
            { title: "Total Feedback", value: feedbackData.length, icon: MessageSquare, color: "text-violet-400", bg: "bg-violet-500/10", sub: "Total Responses" },
            { title: "NPS Score", value: npsScore, icon: Gauge, color: "text-emerald-400", bg: "bg-emerald-500/10", sub: "Net Promoter Score" },
            { title: "Critical Issues", value: lowRatings.length, icon: AlertTriangle, color: "text-red-400", bg: "bg-red-500/10", sub: "Requires Attention" },
          ].map((metric, idx) => (
            <Card key={idx} className="p-6 border border-gray-800 bg-gray-900/50 hover:bg-gray-900 transition-all duration-300 hover:border-gray-700 group">
              <div className="flex justify-between items-start">
                <div>
                  <p className="text-gray-400 text-sm font-medium mb-1">{metric.title}</p>
                  <h3 className={`text-4xl font-bold ${metric.color}`}>{metric.value}</h3>
                </div>
                <div className={`p-3 rounded-2xl ${metric.bg} group-hover:scale-110 transition-transform`}>
                  <metric.icon className={`w-6 h-6 ${metric.color}`} />
                </div>
              </div>
              <div className="mt-4 flex items-center text-gray-500 text-sm">
                <TrendingUp className="w-4 h-4 mr-1" />
                <span>{metric.sub}</span>
              </div>
            </Card>
          ))}
        </div>

        {/* Charts Grid */}
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">

          {/* 1. Trend Chart (Big) */}
          <Card className="lg:col-span-2 p-6 border border-gray-800 bg-gray-900/50">
            <div className="flex items-center justify-between mb-6">
              <h3 className="text-lg font-bold flex items-center gap-2 text-gray-200">
                <Activity className="w-5 h-5 text-blue-500" />
                Feedback Volume Trends
              </h3>
            </div>
            <div className="h-[300px] w-full">
              <ResponsiveContainer width="100%" height="100%">
                <AreaChart data={trendData}>
                  <defs>
                    <linearGradient id="colorCount" x1="0" y1="0" x2="0" y2="1">
                      <stop offset="5%" stopColor="#3b82f6" stopOpacity={0.3} />
                      <stop offset="95%" stopColor="#3b82f6" stopOpacity={0} />
                    </linearGradient>
                  </defs>
                  <CartesianGrid strokeDasharray="3 3" stroke="#1f2937" vertical={false} />
                  <XAxis dataKey="date" axisLine={false} tickLine={false} tick={{ fill: '#9ca3af' }} />
                  <YAxis axisLine={false} tickLine={false} tick={{ fill: '#9ca3af' }} />
                  <Tooltip content={<CustomTooltip />} />
                  <Area
                    type="monotone"
                    dataKey="count"
                    stroke="#3b82f6"
                    fillOpacity={1}
                    fill="url(#colorCount)"
                    strokeWidth={3}
                  />
                </AreaChart>
              </ResponsiveContainer>
            </div>
          </Card>

          {/* 2. Sentiment Donut */}
          <Card className="p-6 border border-gray-800 bg-gray-900/50">
            <h3 className="text-lg font-bold mb-2 flex items-center gap-2 text-gray-200">
              <PieChartIcon className="w-5 h-5 text-purple-500" />
              Sentiment Analysis
            </h3>
            <div className="h-[300px] w-full relative">
              <ResponsiveContainer width="100%" height="100%">
                <PieChart>
                  <Pie
                    data={sentimentData}
                    cx="50%"
                    cy="50%"
                    innerRadius={60}
                    outerRadius={80}
                    paddingAngle={5}
                    dataKey="value"
                    stroke="none"
                  >
                    {sentimentData.map((entry, index) => (
                      <Cell key={`cell-${index}`} fill={SENTIMENT_COLORS[index]} />
                    ))}
                  </Pie>
                  <Tooltip content={<CustomTooltip />} />
                  <Legend verticalAlign="bottom" height={36} iconType="circle" />
                </PieChart>
              </ResponsiveContainer>
              <div className="absolute inset-0 flex items-center justify-center pointer-events-none">
                <div className="text-center">
                  <p className="text-3xl font-bold text-white">{feedbackData.length}</p>
                  <p className="text-xs text-gray-500">Total</p>
                </div>
              </div>
            </div>
          </Card>

          {/* 3. Rating Distribution */}
          <Card className="p-6 border border-gray-800 bg-gray-900/50">
            <h3 className="text-lg font-bold mb-6 flex items-center gap-2 text-gray-200">
              <BarChart3 className="w-5 h-5 text-orange-500" />
              Rating Distribution
            </h3>
            <div className="h-[250px] w-full">
              <ResponsiveContainer width="100%" height="100%">
                <BarChart data={ratingData} layout="vertical" margin={{ left: 0 }}>
                  <CartesianGrid strokeDasharray="3 3" horizontal={true} vertical={false} stroke="#1f2937" />
                  <XAxis type="number" hide />
                  <YAxis
                    dataKey="name"
                    type="category"
                    axisLine={false}
                    tickLine={false}
                    width={60}
                    tick={{ fill: '#9ca3af', fontSize: 12 }}
                  />
                  <Tooltip content={<CustomTooltip />} cursor={{ fill: 'rgba(255,255,255,0.05)' }} />
                  <Bar dataKey="count" radius={[0, 4, 4, 0]} barSize={24}>
                    {ratingData.map((entry, index) => (
                      <Cell key={`cell-${index}`} fill={entry.fill} />
                    ))}
                  </Bar>
                </BarChart>
              </ResponsiveContainer>
            </div>
          </Card>

          {/* 4. Peak Hours */}
          <Card className="p-6 border border-gray-800 bg-gray-900/50">
            <h3 className="text-lg font-bold mb-6 flex items-center gap-2 text-gray-200">
              <Clock className="w-5 h-5 text-teal-500" />
              Peak Activity Hours
            </h3>
            <div className="h-[250px] w-full">
              <ResponsiveContainer width="100%" height="100%">
                <BarChart data={hourData}>
                  <CartesianGrid strokeDasharray="3 3" vertical={false} stroke="#1f2937" />
                  <XAxis
                    dataKey="hour"
                    axisLine={false}
                    tickLine={false}
                    tick={{ fill: '#9ca3af', fontSize: 10 }}
                    interval={3}
                  />
                  <Tooltip content={<CustomTooltip />} cursor={{ fill: 'rgba(255,255,255,0.05)' }} />
                  <Bar dataKey="count" fill="#14b8a6" radius={[4, 4, 0, 0]} />
                </BarChart>
              </ResponsiveContainer>
            </div>
          </Card>

          {/* 5. Top Pages */}
          <Card className="p-6 border border-gray-800 bg-gray-900/50">
            <h3 className="text-lg font-bold mb-6 flex items-center gap-2 text-gray-200">
              <Globe className="w-5 h-5 text-pink-500" />
              Top Feedback Sources
            </h3>
            <div className="h-[250px] w-full">
              <ResponsiveContainer width="100%" height="100%">
                <BarChart data={pageData} layout="vertical" margin={{ left: 0 }}>
                  <CartesianGrid strokeDasharray="3 3" horizontal={true} vertical={false} stroke="#1f2937" />
                  <XAxis type="number" hide />
                  <YAxis
                    dataKey="name"
                    type="category"
                    axisLine={false}
                    tickLine={false}
                    width={80}
                    tick={{ fill: '#9ca3af', fontSize: 12 }}
                  />
                  <Tooltip content={<CustomTooltip />} cursor={{ fill: 'rgba(255,255,255,0.05)' }} />
                  <Bar dataKey="count" fill="#ec4899" radius={[0, 4, 4, 0]} barSize={24} />
                </BarChart>
              </ResponsiveContainer>
            </div>
          </Card>

        </div>

        {/* Recent Feedback List */}
        <Card className="p-6 border border-gray-800 bg-gray-900/50">
          <h3 className="text-lg font-bold mb-4 flex items-center gap-2 text-gray-200">
            <MessageSquare className="w-5 h-5 text-indigo-500" />
            Recent Comments
          </h3>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {feedbackData.slice().reverse().slice(0, 6).map((feedback, idx) => (
              <div key={idx} className="p-4 rounded-xl bg-gray-800/50 border border-gray-700/50 hover:border-gray-600 transition-colors">
                <div className="flex justify-between items-start mb-3">
                  <div className="flex items-center gap-3">
                    <div className={`w-8 h-8 rounded-full flex items-center justify-center text-white text-xs font-bold ${feedback.rating >= 4 ? "bg-green-500" : feedback.rating === 3 ? "bg-yellow-500" : "bg-red-500"
                      }`}>
                      {feedback.rating}
                    </div>
                    <div>
                      <p className="font-semibold text-sm text-gray-200">{feedback.name}</p>
                      <p className="text-xs text-gray-500">{new Date(feedback.timestamp).toLocaleDateString()}</p>
                    </div>
                  </div>
                </div>
                <p className="text-sm text-gray-400 line-clamp-3">
                  "{feedback.comment}"
                </p>
              </div>
            ))}
            {feedbackData.length === 0 && (
              <div className="col-span-full text-center py-10 text-gray-500">
                No feedback yet
              </div>
            )}
          </div>
        </Card>
      </main>
    </div>
  );
};

export default Dashboard;
